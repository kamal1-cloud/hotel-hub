<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="7" author="kamel">
        <createTable tableName="hotel_translations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="language" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="translated_name" type="VARCHAR(255)"/>
            <column name="translated_description" type="TEXT"/>
            <column name="translated_address" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="hotel_translations"
                baseColumnNames="hotel_id"
                referencedTableName="hotels"
                referencedColumnNames="id"
                constraintName="fk_hotel_translations_hotel"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>